<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/searchCuisineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp">

        <EditText
            android:id="@+id/searchCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search "
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="9dp"
            android:padding="9dp"
            android:fontFamily="@font/open_sans"
            android:background="@drawable/search_res_background"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:maxLines="1"
            android:inputType="text"
            android:elevation="7dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchCuisineContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchCuisineLayout"
        android:background="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchCuisineRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

    </RelativeLayout>

</RelativeLayout>